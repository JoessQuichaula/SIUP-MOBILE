<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/alert_ui"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/headerAlert"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_alert" />

    <TextView
        android:id="@+id/txtAlertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="AVISO"
        android:textColor="@color/colorGradient2"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/headerAlert"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtAlertBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/txtAlertTitle"
        android:text="Você está tentando sair desta tela, todas os dados serão Perdidos"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAlertBody"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnAlertCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/btn_back_style"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="10dp"
            android:text="CANCELAR" />

        <Button
            android:id="@+id/btnAlertConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/gradient_splash"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="10dp"
            android:text="CONTIUNAR"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

