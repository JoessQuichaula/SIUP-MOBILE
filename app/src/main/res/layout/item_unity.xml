    <ImageView
        android:id="@+id/imgUnity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/bilhetes"
        />

    <TextView
        android:id="@+id/txtUnity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECÇÃO NACIONAL DO ARQUIVO DE IDENTIFICAÇÃO CIVIL E CRIMINAL(DNAICC)"
        android:textColor="@color/colorGradient2"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/imgUnity"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_below="@id/txtUnity">

        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:background="@drawable/btn_back_style"
            android:text="SABER MAIS"

             />

        <Button
            android:id="@+id/btnService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="SERVIÇOS"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/gradient_splash"
             />

    </LinearLayout>

</RelativeLayout>