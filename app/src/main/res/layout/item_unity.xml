    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:background="?attr/colorBackgroundItemNews"
       >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/imgUnity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:elevation="6dp"
                android:src="@drawable/bilhetes"
                />
        </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtUnity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtUnity"
        android:textColor="@color/colorGradient2"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/cardImg"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_below="@id/txtUnity">

        <Button
            android:id="@+id/btnAlertCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_back_style"
            android:text="SABER MAIS"

             />

        <Button
            android:id="@+id/btnService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="SERVIÇOS"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/gradient_splash"
             />

    </LinearLayout>

    </RelativeLayout>
</com.faltenreich.skeletonlayout.SkeletonLayout>