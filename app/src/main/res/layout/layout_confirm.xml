<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_ui"
    android:paddingBottom="30dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:checkView_strokeColor="@color/colorGradient2"
        app:checkView_strokeWidth="5dp"/>

    <TextView
        android:id="@+id/txtConfirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Solicitação feita com Sucesso"
        android:textAlignment="center"
        android:layout_below="@id/check"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtConfirmBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/txtConfirmTitle"
        android:text="Espere até chegar a uma notificação da repartição"/>

</RelativeLayout>